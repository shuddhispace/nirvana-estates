*.jsx     text eol=lf
*.tsx     text eol=lf
*.json    text eol=lf
*.css     text eol=lf
*.scss    text eol=lf
*.html    text eol=lf
*.md      text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf

# Binary files â€“ do not touch
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.pdf     binary
*.zip     binary

# Ignore node_modules entirely
node_modules/* -text
